<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.viewpager.widget.ViewPager
        android:layout_marginTop="10dp"
        android:id="@+id/viewPagerExplore"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        />
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6" >
    <ImageView

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:id="@+id/imgExploreNewestSong"
        android:src="@drawable/trending_song"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:id="@+id/imgExploreSeeall"
            android:layout_marginTop="10dp"
            android:src="@drawable/see_all"/>
    </LinearLayout>
    <ListView
        android:layout_marginTop="@dimen/margin_basex2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_size"
        android:id="@+id/lvExploreSong"/>
    <GridView
        android:layout_marginTop="@dimen/margin_basex2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_size"
        android:id="@+id/exploreGridView"
        android:numColumns="3"
        android:visibility="gone"
        />


</LinearLayout>