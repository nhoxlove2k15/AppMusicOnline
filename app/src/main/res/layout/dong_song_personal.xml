<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="8"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="80dp"
            app:cardCornerRadius="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="2">
        <ImageView
            android:layout_width="100dp"

            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:id="@+id/imgPersonalSong"
           />
        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="6">
            <TextView
                android:layout_width="wrap_content"
                android:text="Right now"
                android:textSize="@dimen/song_name"
                android:id="@+id/txtPersonalSongName"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#0a0a0a"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtPersonalSongName"
                android:text="One direction"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#0a0a0a"
                android:id="@+id/txtPersonalSongArtist"

                android:textSize="@dimen/song_artist"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4:30"
                android:textSize="@dimen/song_time"
                android:layout_marginRight="30dp"

                android:textColor="#0a0a0a"
                android:id="@+id/txtPersonalSongTime"
                android:layout_alignParentRight="true"
                android:layout_marginTop="25dp" />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>