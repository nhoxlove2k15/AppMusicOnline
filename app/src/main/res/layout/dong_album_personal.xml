<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="8"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="80dp"
            app:cardCornerRadius="10dp"
            android:layout_weight="2">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:id="@+id/imgPersonalAlbum"
            android:layout_weight="2"/>
        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="6">
            <TextView
                android:layout_width="wrap_content"
                android:text="Right now"
                android:textSize="24dp"
                android:id="@+id/txtPersonalAlbumName"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtPersonalAlbumName"
                android:text="One direction"
                android:id="@+id/txtPersonalAlbumArtist"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4:30"
                android:layout_marginRight="30dp"
                android:id="@+id/txtPersonalAlbumTime"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp" />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>