<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="80dp"
        app:cardCornerRadius="10dp"
        android:layout_marginRight="5dp"
     >
        <ImageView
            android:layout_width="100dp"

            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:id="@+id/imgPersonalSong"
            />
    </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:text="Right now"
            android:textSize="@dimen/song_name"
            android:id="@+id/txtPersonalSongName"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#0a0a0a"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="One direction"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#0a0a0a"
            android:id="@+id/txtPersonalSongArtist"

            android:textSize="@dimen/song_artist"/>

    </LinearLayout>

