<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="190dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"

    android:layout_marginRight="20dp"

    android:layout_gravity="center">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/LinearViewCardSong"
        android:layout_width="wrap_content"
        android:background="#FFFF"

        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="160dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:background="@drawable/shadow_image"
            android:id="@+id/imgSong"/>
        <TextView

            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:maxLines="1"

            android:id="@+id/txtSongName"
            android:textSize="@dimen/song_name"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#0a0a0a"
            android:text="Phia sau 1 co xxxxxxxxxxx axcv "
           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:maxLines="1"

            android:id="@+id/txtSongArtist"
            android:textSize="@dimen/song_artist"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#0a0a0a"
            android:text="Soobin hoang son"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>